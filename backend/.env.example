# Application Settings
APP_NAME=AgriHedge
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/agrihedge
DATABASE_NAME=agrihedge

# Alternative: Firebase
USE_FIREBASE=False
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Security & Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19006

# Blockchain Configuration
BLOCKCHAIN_PROVIDER=ganache
BLOCKCHAIN_RPC_URL=http://localhost:8545
CONTRACT_ADDRESS=
PRIVATE_KEY=
GAS_LIMIT=3000000

# Polygon Testnet (Mumbai)
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_CHAIN_ID=80001

# Notifications - Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Notifications - Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key

# External Data APIs
AGMARKNET_API_URL=https://api.data.gov.in/resource/
AGMARKNET_API_KEY=your-agmarknet-api-key
NCDEX_API_URL=https://www.ncdex.com/
NCDEX_API_KEY=your-ncdex-api-key

# Price Alert Thresholds
PRICE_ALERT_THRESHOLD_PERCENTAGE=5.0
VOLATILITY_CHECK_INTERVAL_MINUTES=30

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ML Model Configuration
MODEL_RETRAIN_INTERVAL_DAYS=7
FORECAST_HORIZON_DAYS=30
CONFIDENCE_LEVEL=0.95

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agrihedge.log

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# SMS Alerts
SMS_ENABLED=True
PRICE_CHANGE_SMS_THRESHOLD=5.0

# Chatbot Configuration
CHATBOT_MODEL=gpt-3.5-turbo
OPENAI_API_KEY=your-openai-api-key

# Supported Languages
SUPPORTED_LANGUAGES=en,hi,mr,gu,pa,ta,te,kn,ml,bn

# Admin Credentials (Initial Setup)
ADMIN_EMAIL=admin@agrihedge.com
ADMIN_PASSWORD=change-this-password
ADMIN_PHONE=+919876543210
